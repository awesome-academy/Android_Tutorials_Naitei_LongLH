<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/relative_layout_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:padding="@dimen/dp_2"
        style="@style/NightModeRelativeLayout">

        <ImageView
            android:id="@+id/img_song"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/music_icon"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_name_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_song"
            android:textAppearance="@style/NightModeTextView"
            android:textSize="@dimen/sp_14"
            android:layout_toEndOf="@id/img_song"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_name_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_author"
            android:textAppearance="@style/NightModeTextView"
            android:textSize="@dimen/sp_12"
            android:layout_toEndOf="@id/img_song"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_10" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
