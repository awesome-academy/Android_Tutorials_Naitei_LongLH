<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.MusicPlayerActivity">

  <ImageView
      android:id="@+id/img_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:alpha="0.5"
      android:scaleType="centerCrop"
      android:src="@drawable/rairakku"
      tools:ignore="ContentDescription"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="0dp" />

  <TextView
      android:id="@+id/tv_name_song"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dp_16"
      android:ellipsize="marquee"
      android:padding="@dimen/dp_16"
      android:text="@string/title_of_the_song"
      android:textSize="@dimen/sp_24"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/img_song"
      android:layout_width="@dimen/dp_240"
      android:layout_height="@dimen/dp_240"
      android:src="@drawable/rairakku"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.286" />

  <TextView
      android:id="@+id/tv_current_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/seek_bar"
      android:layout_alignParentStart="true"
      android:text="@string/current_time"
      android:textSize="@dimen/sp_16"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.042"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.675" />

  <SeekBar
      android:id="@+id/seek_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dp_10"
      android:backgroundTint="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.635"
      tools:layout_editor_absoluteX="11dp" />

  <TextView
      android:id="@+id/tv_total_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/seek_bar"
      android:layout_alignParentEnd="true"
      android:text="@string/total_time"
      android:textSize="@dimen/sp_16"
      app:layout_constraintBottom_toBottomOf="@+id/img_background"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.952"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.675" />

  <ImageView
      android:id="@+id/btn_previous"
      android:layout_width="@dimen/dp_60"
      android:layout_height="@dimen/dp_60"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:src="@drawable/black_skip_previous_24"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.178"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.835"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/btn_play_or_pause"
      android:layout_width="@dimen/dp_60"
      android:layout_height="@dimen/dp_60"
      android:layout_centerInParent="true"
      android:src="@drawable/black_pause_circle_24px"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.836"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/btn_next"
      android:layout_width="@dimen/dp_60"
      android:layout_height="@dimen/dp_60"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:src="@drawable/black_skip_next_24"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.827"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.836"
      tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
